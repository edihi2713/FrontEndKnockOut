@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>. Customer App . Web API2 Á KnockOutJS</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">

        <div class="container-fluid">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">WEB API2 - KnockOutJS</a>
            </div>
            <!-- END HEADER NAV -->

        </div>
        <!-- END CONTAINER -->

    </nav>
    <!-- END NAV-->


    <div class="container" style="margin-top: 7%;">


        <div class="row">

            <div class="col-md-4">

                <!-- FORM -->
                <div class="panel panel-default">

                    <div class="panel-heading"><span class="glyphicon glyphicon glyphicon-tag" aria-hidden="true"></span><b>Add New Customer</b></div>
                    <div class="panel-body">

                        <form>

                            <div class="form-group" style="display:none;">
                                <label for="CustomerID">Customer ID</label>
                                <input type="text" id="crrCarreraId" class="form-control" data-bind="value: crrCarreraId" placeholder="Customer ID" />
                            </div>
                            <!-- END CUSTOMER ID -->

                            <div class="form-group">
                                <label for="FirstName">Descripcion </label>
                                <input type="text" id="crrDescripcion" class="form-control" data-bind="value: crrDescripcion" placeholder="First Name" />
                            </div>
                            <!-- END FIRST NAME -->

                 

                            <div class="form-group">
                                <label for="crrObservacion">crrObservacion</label>
                                <input type="text" id="crrObservacion" class="form-control" data-bind="value: crrObservacion" placeholder="Email" />
                            </div>
                            <!-- END EMAIL -->

                            
                            <div class="form-group">
                                <label for="crrAnulado">¿Anulado?</label>
                                <input type="checkbox" id="crrAnulado" data-bind="checked: crrAnulado" />
                            </div>

                             
                            <div class="form-group">
                                <label for="crrFechaCreacion">Fecha Creación</label>
                                <input type="text" id="crrFechaCreacion" class="form-control controlFecha" data-bind="value: crrFechaCreacion" />
                            </div>

                               <div class="form-group">
                                <label for="crrFechaCreacion">Empleado que la crea</label>
                                 <input class="form-control" data-bind="value: EmpleadoNombre, AutoCompleteEmpleado: { selected: selectedEmpleado }" id="empEmpleadoIdCreadorT" type="text" />
                                @*<input type="text" id="empEmpleadoIdCreador" class="form-control" data-bind="value: empEmpleadoIdCreador" />
  *@                          </div>

                            <div class="form-group" style="display:none;">
                                <label for="empEmpleadoIdCreador">empEmpleadoIdCreador</label>
                                <input type="text" id="empEmpleadoIdCreador" class="form-control" data-bind="value: empEmpleadoIdCreador" placeholder="Customer ID" />
                            </div>

                               <div class="form-group">
                                <label for="crrFechaDesde">Fecha desde</label>
                                <input type="text" id="crrFechaDesde" class="form-control controlFecha" data-bind="value: crrFechaDesde" />
                            </div>

                               <div class="form-group">
                                <label for="crrFechaHasta">Fecha hasta</label>
                                <input type="text" id="crrFechaHasta" class="form-control controlFecha" data-bind="value: crrFechaHasta" />
                            </div>



                            <button type="button" class="btn btn-success" data-bind="click: addNewCarrera" id="Save">
                                <span class="glyphicon  glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>Save  
                            </button>

                            <button type="button" class="btn btn-info" data-bind="click: clearFields" id="Clear">
                                <span class="glyphicon  glyphicon glyphicon-refresh" aria-hidden="true"></span>Clear  
                            </button>

                            <button type="button" class="btn btn-warning" data-bind="click: updateCareer " style="display: none;" id="Update">
                                <span class="glyphicon  glyphicon glyphicon-pencil" aria-hidden="true"></span>Update Customer  
                            </button>

                            <button type="button" class="btn btn-default" data-bind="click: cancel " style="display:none;" id="Cancel">
                                <span class="glyphicon  glyphicon glyphicon-remove" aria-hidden="true"></span>Cancel  
                            </button>

                        </form>
                        <!-- END FORM -->


                    </div>
                    <!-- END PANEL BODY-->

                </div>
                <!-- END PANEL-->

            </div>
            <!-- END  col-md-4 -->

            <div class="col-md-8">

                <div class="panel panel-default">

                    <div class="panel-heading"><span class="glyphicon  glyphicon glyphicon-stats" aria-hidden="true"></span><b>Charting Career</b>   </div>

                    <div class="panel-body">


                        <!-- <img src="images/Chart.png" style="width60%; margin6px 70px;" /> -->

                        <div id="line-chart" style="height:300px;"></div>
                        <br />
                        <br />

                    </div>
                    <!-- END PANEL-BODY-->

                </div>
                <!-- END PANEL-->

            </div>
            <!-- END col-md-8-->

        </div>

        <div class="row">

            <div class="col-md-12">

                <div class="panel panel-default">

                    <div class="panel-heading">
                        <span class="glyphicon  glyphicon glyphicon-zoom-in" aria-hidden="true"></span><b>Career List </b>
                        <div class="loadingZone" style="color: #000; display:block; float:right; display:none;">
                            <img src="images/ajax-loader.gif" />
                            Refresh Data ...</div>
                    </div>

                    <div class="panel-body">

                        <table class="table table-hover text-center">

                            <thead>
                                <tr>
                                    <th><span class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true"></span></th>
                                    <th>#</th>
                                    <th>Carrera</th>
                                    <th>Anulado</th>
                                    <th>Fecha Creación</th>
                                    <th>Empleado Creador</th>
                                    <th>Fecha Desde</th>
                                    <th>Fecha Hasta</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <!-- END THEAD -->

                            <tbody data-bind="foreach: CarreraList">

                                <tr>

                                    <td>
                                        <button type="button" class="btn btn-default btn-xs" data-bind="click: $root.detailCareer"><span class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true"></span></button>
                                    </td>
                                    <td><span data-bind="text: crrCarreraId"></span></td>
                                    <td><span data-bind="text: crrDescripcion"></span></td>
                                    <td><input type="checkbox" data-bind="checked: crrAnulado"/></td>
                                    <td><span data-bind="text: crrFechaCreacion"></span></td>
                                    <td><span data-bind="text: EmpleadoNombre"></span></td>
                                    <td style="display:none"><span data-bind="text: empEmpleadoIdCreador"></span></td>
                                    <td><span data-bind="text: crrFechaDesde"></span></td>
                                    <td><span data-bind="text: crrFechaHasta"></span></td>

                                    <td>

                                        <button type="button" class="btn btn-danger btn-xs" data-bind="click: $root.deleteCarrer">
                                            <span class="glyphicon glyphicon glyphicon-trash" aria-hidden="true" ></span>
                                        </button>
                                    </td>

                                </tr>



                            </tbody>
                            <!-- END TBODY -->

                        </table>
                        <!-- END TABLE -->


                    </div>

                </div>

            </div>

        </div>
    </div>
    <!-- END CONTAINER-->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="Scripts/knockout-3.4.2.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- app.js-->
    <script src="Scripts/app.js"></script>


    <script>
        $(document).ready(function () {

            $('.controlFecha').datepicker();

        });
    </script>
</body>
</html>
